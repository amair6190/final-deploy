# SolvIT Ticketing System Environment Variables
# Add this to your existing .env file

# Your domain settings (replace with your actual domain)
ALLOWED_HOSTS=127.0.0.1,localhost,YOUR_DOMAIN.com,www.YOUR_DOMAIN.com

# Security settings for HTTPS
DEBUG=False
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Optional: WhatsApp integration (if used)
WHATSAPP_ENABLED=True
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_access_token
